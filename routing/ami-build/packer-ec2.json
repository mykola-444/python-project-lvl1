{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "docker_image": "{{env `DOCKER_IMAGE`}}",
    "volume_size" : "500"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "subnet_id": "subnet-3f83bc76",
      "source_ami": "ami-1853ac65",
      "instance_type": "c5.large",
      "ssh_username": "ec2-user",
      "ami_name": "ivi-jenkins-mitf-generator-{{timestamp}}",
      "ami_virtualization_type": "hvm",
      "ena_support": true,
      "tags": {
        "Name": "ivi-jenkins-mitf-generator-{{timestamp}}",
        "Description": "Amazon linux with mitf docker image for ivi-mitf.jenkins.release.in.here.com"
      },
     "ami_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_size": "{{user `volume_size`}}",
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "execute_command": "{{.Vars}} sudo -S -E bash -eux '{{.Path}}'",
      "environment_vars": [
        "DOCKER_IMAGE={{user `docker_image`}}"
      ],
      "type": "shell",
      "script": "bootstrap.sh"
    }
  ]
}
